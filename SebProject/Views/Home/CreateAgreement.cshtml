@model SebProject.Models.AgreementModel
@{
    ViewBag.Title = "Create new agreement";
}

@using (Html.BeginForm("CreateAgreement", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.PersonalId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PersonalId, new { @class = "form-control", @type = "number", @min = "1" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Amount, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @type = "number", @min = "1" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Margin, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Margin, new { @class = "form-control", @type = "number", @min = "0" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BaseRateCode, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(m => m.BaseRateCode, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Duration, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Duration, new { @class = "form-control", @type = "number", @min = "1" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
